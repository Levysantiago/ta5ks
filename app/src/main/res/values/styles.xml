<resources>

    <!-- Base application theme. -->
    <style name="app_theme_dark">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="app_theme_light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
    
    <style name="toolbar_item">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="toolbar_selected_item_dark">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="toolbar_selected_item_light">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MenuItemSelected" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

</resources>
