<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Toolbar_Item">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Toolbar_Item_Selected">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MenuItemSelected" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

</resources>
