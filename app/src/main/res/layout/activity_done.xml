<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uesc.tac.ta5ks.DoneActivity"
    android:orientation="vertical"
    android:background="@color/colorDarkGrey">

    <!-- <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        app:layout_constraintBottom_toTopOf="@+id/ctrll_tasks"
        app:layout_constraintTop_toTopOf="parent" /> -->

        <android.support.constraint.ConstraintLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_done"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_done"
                style="@style/Toolbar_Item_Selected"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:gravity="center"
                android:text="done"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_back"
                app:layout_constraintRight_toLeftOf="@+id/tv_today"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_today"
                style="@style/Toolbar_Item"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="today"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_done"
                app:layout_constraintRight_toLeftOf="@+id/tv_backlog"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_backlog"
                style="@style/Toolbar_Item"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="backlog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_today"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_settings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctrll_tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/app_bar">

            <ListView
                android:id="@+id/lv_tasks"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:divider="@color/colorDivider"
                android:dividerHeight="1dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_newTask"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_newTask"
                android:layout_width="0dp"
                android:layout_height="145dp"
                android:background="@color/colorTransparent"
                android:text="ADD NEW TASK"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteY="364dp" />

        </android.support.constraint.ConstraintLayout>

</LinearLayout>
